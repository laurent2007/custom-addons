<?xml version="1.0" ?>
<odoo>
	<record id="module_accounts_category" model="ir.module.category">
		<field name="name">Accounts</field>
	</record>
	
	<!--	Library User Group -->

    <record id="accounts_group_user" model="res.groups">
    
            <field name="name">User</field>
    
            <field name="category_id" ref="module_accounts_category" />
    
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    
        </record>

    <!-- Library Manager Group -->

    <record id="accounts_group_manager" model="res.groups">
    
            <field name="name">Manager</field>
    
            <field name="category_id" ref="module_accounts_category" />
    
            <field name="implied_ids" eval="[(4, ref('accounts_group_user'))]" />
    
            <field name="users" eval="[(4, ref('base.user_root')),
		           (4, ref('base.user_admin'))]" />
				    
    </record>

	<data noupdate="1">
		<record id="account_user_rule" model="ir.rule">
			<field name="name">Accounts User Access</field>
			<field name="model_id" ref="model_chart_of_accounts" />
			<field name="domain_force">
				[('active','=',True)]
			</field>
			<field name="groups" eval="[(4,ref('accounts_group_user'))]" />
		</record>
	</data>

</odoo>
